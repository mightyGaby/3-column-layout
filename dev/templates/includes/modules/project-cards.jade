include ../mixins.jade
include ../variables.jade

#work.col-xs-12.col-sm-9.col-md-10.full-height.project-list.hidden
  ul.row.full-height.animated
    - each project in projects
      - var url = '../project-descriptions/' + project.fileName
      +project-card(index, project.name, project.categoryClass)

      li(class="visible-xs-block col-xs-12 project-card flip-container #{project.categoryClass}" data-desc-index="#{index}")
        .flipper
          .front
              //- insert image here
              p #{project.name} #{url}
          .back
            include !{url}
      - index = index + 1
